<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TelaApresentacao">


    <ImageView

        android:layout_width="99dp"
        android:layout_height="61dp"
        android:src="@drawable/bank_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <View
        android:id="@+id/ellipse_10"
        android:layout_width="172dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <View
        android:id="@+id/ellipse_11"
        android:layout_width="196dp"
        android:layout_height="209dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <View
        android:id="@+id/ellipse_12"
        android:layout_width="285dp"
        android:layout_height="277dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="244dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <View
        android:id="@+id/ellipse_13"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="444dp"
        android:layout_height="238dp"
        android:src="@drawable/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <View
        android:id="@+id/ellipse_14"
        android:layout_width="394dp"
        android:layout_height="396dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_enter"
        android:visibility="visible"
        android:layout_width="71dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/text_click"
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:text="Become a Member"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_enter"
        app:layout_constraintVertical_bias="0.545" />


    <GridLayout
        android:id="@+id/textTeclado"
        android:layout_width="278dp"
        android:layout_height="61dp"
        android:inputType="numberPassword"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <GridLayout
        android:id="@+id/teclado"
        android:layout_width="285dp"
        android:layout_height="338dp"
        android:background="@drawable/buttom_style"
        android:columnCount="3"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.968">


        <Button
            android:id="@+id/buttom_1"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="1" />

        <Button
            android:id="@+id/buttom_2"
            android:background="@drawable/buttom_style"
            android:layout_marginTop="20dp"
            android:text="2" />

        <Button
            android:id="@+id/buttom_3"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="-3dp"
            android:layout_marginTop="20dp"
            android:text="3" />

        <Button
            android:id="@+id/buttom_4"
            android:background="@drawable/buttom_style"

            android:layout_marginLeft="15dp"
            android:text="4" />

        <Button
            android:id="@+id/buttom_5"
            android:background="@drawable/buttom_style"
            android:text="5" />

        <Button
            android:id="@+id/buttom_6"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="-3dp"
            android:text="6" />

        <Button
            android:id="@+id/buttom_7"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="15dp"
            android:text="7" />

        <Button
            android:id="@+id/buttom_8"
            android:background="@drawable/buttom_style"
            android:text="8" />

        <Button
            android:id="@+id/buttom_9"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="-3dp"
            android:text="9" />

        <Button
            android:id="@+id/buttom_x"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="15dp"
            android:text="x" />

        <Button
            android:id="@+id/buttom_0"
            android:background="@drawable/buttom_style"
            android:text="0" />

        <Button
            android:id="@+id/buttom_ok"
            android:background="@drawable/buttom_style"
            android:layout_marginLeft="-3dp"
            android:text="ok" />

        <Button
            android:id="@+id/buttom_back"
            android:background="@drawable/buttom_style"
            android:layout_width="68dp"
            android:layout_height="35dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-6dp"
            android:text="ba" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
