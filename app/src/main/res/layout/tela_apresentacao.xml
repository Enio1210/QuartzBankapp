<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TelaApresentacao">


    <ImageView

        android:layout_width="99dp"
        android:layout_height="61dp"
        android:src="@drawable/bank_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />

    <View
        android:id="@+id/ellipse_10"
        android:layout_width="172dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <View
        android:id="@+id/ellipse_11"
        android:layout_width="196dp"
        android:layout_height="209dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <View
        android:id="@+id/ellipse_12"
        android:layout_width="285dp"
        android:layout_height="277dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="244dp"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <View
        android:id="@+id/ellipse_13"
        android:layout_width="201dp"
        android:layout_height="201dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="444dp"
        android:layout_height="238dp"
        android:src="@drawable/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <View
        android:id="@+id/ellipse_14"
        android:layout_width="394dp"
        android:layout_height="396dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="92dp"
        android:layout_marginTop="540dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_enter"
        android:visibility="visible"
        android:layout_width="71dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84" />

    <TextView
        android:id="@+id/text_click"
        android:layout_width="137dp"
        android:layout_height="30dp"
        android:text="Become a Member"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_enter"
        app:layout_constraintVertical_bias="0.545" />

    <GridLayout
        android:id="@+id/textTeclado"
        android:layout_width="278dp"
        android:layout_height="61dp"
        android:background="@drawable/buttom_style"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <GridLayout
        android:id="@+id/teclado"
        android:layout_width="232dp"
        android:layout_height="348dp"
        android:background="@drawable/buttom_style"
        android:columnCount="3"
        android:elevation="4dp"

        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97">

        <Button
            android:id="@+id/buttom_1"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_2"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_3"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_4"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_5"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttom_style"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttom_6"
            android:layout_width="58sp"
            android:layout_height="63dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="10dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/buttom_style"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_7"
            android:layout_width="58sp"
            android:layout_height="63dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_8"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/buttom_style"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_9"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="0dp"
            android:background="@drawable/buttom_style"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_ok"
            android:layout_width="65dp"
            android:layout_height="66dp"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="1dp"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/buttom_style"
            android:text="ok"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_x"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/buttom_style"
            android:text="x"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttom_0"
            android:layout_width="58dp"
            android:layout_height="63dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttom_style"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttom_back"
            android:layout_width="34dp"
            android:layout_height="28dp"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/buttom_style"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
